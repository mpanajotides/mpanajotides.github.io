soldecourant=0
soldelivret=0
menu="0"
a=0
taux=2

while menu!="q":
    print("1 : Afficher le solde du compte courant")
    print("2 : créditer le compte courant")
    print("3 : retrait sur le compte courant")
    print("4 : Afficher le solde du livret")
    print("5 : créditer le compte livret")
    print("6 : Faire un virement du compte courant au compte livret")
    print("7 : Faire un virement du compte livret au compte courant")
    print("8 : Simuler les intéret du compte livret avec un taux de 2%")
    print("q : quitter")
    menu=input("Que voulez vous faire?\n")

    if menu=="1":
        print("Vous avez",soldecourant,"euro sur votre compte courant")

    elif menu=="2":
        creditcourant=float(input("Quelle votre montant?"))
        soldecourant=soldecourant+creditcourant
        print("Vous avez maintenant",soldecourant,"euro sur votre compte courant")

    elif menu=="3":
        retraitcourant=float(input("Quelle votre montant?"))
        soldecourant=soldecourant-retraitcourant
        print("Vous avez maintenant",soldecourant,"euro sur votre compte courant")


    elif menu=="4":
        print("Vous avez",soldelivret,"euro sur votre compte livret")

    elif menu=="5":
        creditlivret=float(input("Quelle est votre montant?"))
        soldelivret=soldelivret+creditlivret
        print("Vous avez maintenant",soldelivret,"euro sur votre compte livret")

    elif menu=="6":
        virementmontantcl=float(input("Quelle votre montant?"))
        soldecourant= soldecourant-virementmontantcl
        soldelivret= soldelivret+virementmontantcl
        print("Vous avez maintenant",soldelivret,"euro sur votre compte livret")
        print("Vous avez maintenant",soldecourant,"euro sur votre compte courant")

    elif menu=="7":
        virementmontantlc=float(input("Quelle votre montant?"))
        soldelivret= soldelivret-virementmontantlc
        soldecourant= soldecourant+virementmontantlc
        print("Vous avez maintenant",soldelivret,"euro sur votre compte livret")
        print("Vous avez maintenant",soldecourant,"euro sur votre compte courant")

    elif menu=="8":
        print("le solde du compte livret est",soldelivret,"euro")
        soldelivretsimu1=soldelivret*taux/100
        soldelivretsimu2=soldelivret
        soldelivretsimu=soldelivretsimu1+soldelivretsimu2
        print("le solde du compte livret serai de",soldelivretsimu,"euro")

    elif menu=="q":
        print("au revoir")

    else:
        print("erreur")
